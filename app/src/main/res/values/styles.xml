<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RegisterInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spaces_36</item>
        <item name="android:paddingLeft">@dimen/spaces_triple</item>
        <item name="android:paddingRight">@dimen/spaces_triple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ButtonStyle.OutlineWhite">
        <item name="android:background">@drawable/btn_rounded_outline_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InfoTitleTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spaces_big</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DeviceErrorDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="DeviceErrorTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LyDeviceError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spaces_double</item>
        <item name="android:layout_marginRight">@dimen/spaces_double</item>
    </style>

    <style name="ImageInfo">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_marginTop">@dimen/spaces_quadruple</item>
    </style>

    <style name="InfoDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spaces_triple</item>
        <item name="android:layout_marginRight">@dimen/spaces_triple</item>
        <item name="android:layout_marginTop">@dimen/spaces_double</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="IntroTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spaces_quadruple</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle.Primary.Intro">
        <item name="android:layout_marginBottom">@dimen/spaces_triple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/spaces_quadruple</item>
        <item name="android:paddingRight">@dimen/spaces_quadruple</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="DeviceErrorSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spaces_half</item>
        <item name="android:drawablePadding">@dimen/spaces_half</item>
        <item name="android:drawableRight">@drawable/ic_next_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#0026A8</item>
    </style>

</resources>
