<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="@dimen/spaces_half"
                android:left="@dimen/spaces_tiny"
                android:right="@dimen/spaces_tiny"
                android:top="@dimen/spaces_half"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="@dimen/spaces_little"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
            <solid android:color="@color/card_shadow_1"/>
            <corners android:radius="@dimen/spaces_tiny"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="@dimen/spaces_tiny"
                android:left="@dimen/spaces_little"
                android:right="@dimen/spaces_little"
                android:top="0dp"/>
            <solid android:color="@color/card_shadow_2"/>
            <corners android:radius="@dimen/spaces_tiny"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/card_background"/>
            <corners android:radius="@dimen/spaces_tiny"/>
        </shape>
    </item>

</layer-list>