<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="@dimen/spaces_double"
    tools:context=".feature.candidate.EnterCodeActivity">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaces_triple"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/inp_code"
        android:layout_centerHorizontal="true"
        android:text="Enter Code"
        android:textColor="@color/white"
        android:textSize="@dimen/text_headline"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/inp_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/spaces_double"
        android:hint="Enter Code"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_headline"
        app:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/btn_submit"
        style="@style/ButtonStyle.Secondary"
        android:layout_width="150dp"
        android:layout_below="@id/inp_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaces_double"
        android:text="Submit"/>

    <Button
        android:id="@+id/btn_login"
        style="@style/ButtonStyle.OutlineWhite"
        android:layout_width="150dp"
        android:layout_below="@id/btn_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaces_double"
        android:text="Login"/>

</RelativeLayout>