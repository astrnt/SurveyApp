<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.candidate.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:id="@+id/txt_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaces_double"
                android:textAllCaps="true"
                tools:text="Company Name"/>

            <TextView
                android:id="@+id/txt_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                tools:text="Job Title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaces_double"
                android:text="Enter your details below"/>

            <EditText
                android:id="@+id/inp_full_name"
                style="@style/RegisterInputStyle"
                android:hint="Full Name"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/inp_preferred_name"
                style="@style/RegisterInputStyle"
                android:hint="Preferred Name"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/inp_email"
                style="@style/RegisterInputStyle"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/inp_confirm_email"
                style="@style/RegisterInputStyle"
                android:hint="Re-enter your email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/inp_phone"
                style="@style/RegisterInputStyle"
                android:hint="Phone Number"
                android:imeOptions="actionDone"
                android:inputType="number"/>

            <LinearLayout
                android:id="@+id/ly_custom_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/btn_submit"
                style="@style/ButtonStyle.Primary"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:text="Continue"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>